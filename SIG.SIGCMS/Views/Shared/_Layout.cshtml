<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />    
    <title>@ViewBag.Title</title>
</head>
<body>
<div>
    @RenderBody()

    <hr />
    <footer>
        @if (User.Identity.IsAuthenticated)
        {
            <p>
                @User.Identity.Name (<a asp-controller="Account" asp-action="Logout">Logout</a>)
            </p>
        }
        else
        {
            <p>@User.Identity.Name
                <a asp-controller="Account" asp-action="Login">Signin</a>
                |
                <a asp-controller="Account" asp-action="Register">Register</a>
                |
                @*<a asp-controller="Account" asp-action="ForgotPassword">Forgot Password</a>*@
            </p>
        }
    </footer>
</div>
<script src="~/js/lib/jquery/jquery.slim.min.js"></script>
<script src="~/js/lib/popper/popper.min.js"></script>
<script src="~/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>

@model User

    <div class="modal fade" id="ModalEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title"><i class="fa fa-user fa-fw"></i>用户资料</h4>
                </div>
                <div class="modal-body">

                   <div class="row">
                       <div class="col-sm-3">
                           <img src="@(string.IsNullOrEmpty(Model.PhotoUrl)?"/Content/Img/DefaultPhoto.png":Model.PhotoUrl)" alt="@Model.UserName" class="img-responsive" />
                       </div>
                       <div class="col-sm-9">
                           <ul class="list-unstyled">
                               <li>
                                   <label>帐号：</label>@Model.UserName
                               </li>
                               <li>
                                   <label>姓名：</label>@Model.RealName
                               </li>
                               <li>
                                   <label>性别：</label>@Model.GenderName
                               </li>
                               <li>
                                   <label>邮箱：</label>@Model.Email
                               </li>
                               <li>
                                   <label>手机：</label>@Model.Mobile
                               </li>
                               <li>
                                   <label>QQ：</label>@Model.QQ
                               </li>
                               <li>
                                   <label>生日：</label>@Model.Birthday
                               </li>
                               <li>
                                   <label>状态：</label>@(Model.IsActive ? "激活" : "锁定")
                               </li>
                               <li>
                                   <label>角色：</label>@string.Join("，", Model.Roles.Select(r => r.RoleName).ToArray())
                               </li>
                               <li>
                                   <label>创建日期：</label>@Model.CreateDate
                               </li>
                               <li>
                                   <label>最后登录时间：</label>@Model.LastActivityDate
                               </li>
                           </ul>                          
                       </div>
                   </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button>                  
                </div>
            </div>
        </div>
    </div>
